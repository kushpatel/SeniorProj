<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                >
            <Spinner
                    android:id="@+id/sensor_selector"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:prompt="@string/sensor_select_prompt"
                    android:entries="@array/sensor_select_array"
                   />
        </LinearLayout>

        <TableLayout
                android:paddingBottom="50dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            <TableRow>
                <TextView
                        android:id="@+id/label_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"/>
                <TextView
                        android:id="@+id/label_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"/>
                <TextView
                        android:id="@+id/label_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/label_1_reading"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/label_2_reading"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/label_3_reading"
                        android:gravity="center"/>
            </TableRow>
        </TableLayout>

        <Button
                android:id="@+id/start_recording_button"
                android:text="@string/start_recording"
                android:layout_height="wrap_content"
                android:layout_width="180dp"
                android:gravity="center"
                android:background="@drawable/custom_button"
                android:textSize="@dimen/button_font_large"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                />

        <Button
                android:id="@+id/stop_recording_button"
                android:text="@string/stop_recording"
                android:layout_height="wrap_content"
                android:layout_width="180dp"
                android:gravity="center"
                android:background="@drawable/custom_button"
                android:textSize="@dimen/button_font_large"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@id/start_recording_button"
                />
    </LinearLayout>

</RelativeLayout>

